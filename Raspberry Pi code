#LCD  example
import RPLCD
import smbus
import time
from RPLCD.i2c import CharLCD

lcd = CharLCD(i2c_expander='PCF8574', address=0x27, port=1, cols=16, rows=2)

lcd.write_string("Hello, Raspberry Pi!")
time.sleep(2)
lcd.clear()  
