
#include <Wire.h>
#include <LiquidCrystal_I2C.h>

// Initialize the LCD (20x4) with the I2C address (usually 0x27 or 0x3F)
LiquidCrystal_I2C lcd(0x27, 20, 4);


  lcd.init();
  lcd.backlight();
  lcd.setCursor(0, 0);
  lcd.print("Welcome to V2 Centrifuge");
  lcd.setCursor(0, 1);
  lcd.print("Waiting for input...");
